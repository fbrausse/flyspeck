let ref3 = ref [];;
let ref4 = ref [];;
let ref5 = ref [];;
let ref6 = ref [];;

let tmref3 = ref `[]:((num list)list)list`;;
let tmref4 = ref `[]:((num list)list)list`;;
let tmref5 = ref `[]:((num list)list)list`;;
let tmref6 = ref `[]:((num list)list)list`;;

(* loading these files changes the references! *)

let arc3 _ = 
  let _ = loadt tmp3 in
  let _ = (tmref3 :=  hol_of_list3 (!ref3)) in ();;

let arc4 _ = 
  let _ = loadt tmp4 in
  let _ = (tmref4 :=  hol_of_list3 (!ref4)) in ();;

let arc5 _ = 
  let _ = loadt tmp5 in
  let _ = (tmref5 :=  hol_of_list3 (!ref5)) in ();;

let arc6 _ = 
  let _ = loadt tmp6 in
  let _ = (tmref6 :=  hol_of_list3 (!ref6)) in ();;

