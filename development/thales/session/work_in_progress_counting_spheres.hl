    MATCH_MP_TAC Conforming.RADIAL_DIFF;
    ASM_REWRITE_TAC[];
    FIRST_X_ASSUM_ST `SUBSET` MP_TAC;
    BY(SET_TAC[]);
  ASM_REWRITE_TAC[];
  ENOUGH_TO_SHOW_TAC ( `&0 <= sol x (t DIFF s)`);
    BY(REAL_ARITH_TAC);
  GMATCH_SIMP_TAC Vol1.sol;
