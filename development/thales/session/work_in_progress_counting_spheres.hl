  REPEAT GEN_TAC;
  REWRITE_TAC[ facet_of ];
  GOAL_TERM (fun w -> (MP_TAC (ISPECL ( envl w[`f`;`p`]) FACE_OF_DISJOINT_INTERIOR)));
