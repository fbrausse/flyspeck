(* General results *)
let ESTD_CONFORMING_concl = `!V. contravening V ==> conforming (V,ESTD V)`;;


let ESTD_SIMPLE_concl = `!V. contravening V ==> simple_hypermap (hypermap_of_fan (V,ESTD V))`;;




(* Need to be derived from previous results *)
let OTHER_AZIM_DART_concl = `!V x. (tame_hypermap_calcs /\ FAN (vec 0,V,ESTD V)) 
				 /\ contravening V 
				 /\ x IN dart_of_fan (V,ESTD V) 
				 /\ CARD (face (hypermap_of_fan (V,ESTD V)) x) >= 4 
				 ==> azim_dart (V,ESTD V) x > #1.15`;;


let my_assumptions_list = list_mk_conj [ESTD_FAN_concl;
				   ESTD_CONFORMING_concl;
				   ESTD_SIMPLE_concl;
				   OTHER_AZIM_DART_concl];;

let my_assumptions = new_definition (mk_eq (mk_var ("my_assumptions", `:bool`), my_assumptions_list));;
