let HQYMRTX2_list = `!L N r (x:A#A). marked_list L N r x /\ ~final_list L r
  ==> ~(x = l'y L r x)`;;

let HQYMRTX3_list = `!L N r (x:A#A). marked_list L N r x /\ ~final_list L r
  ==> ~(x = l'z L N r x)`;;

let AQIUNPP3_concl = 
  `!L N r (x:A#A) i.
    marked_list L N r x ==> 
    marked_list L (ntrans L N r x i) (rtrans L N r x i) x`;;

let HQYMRTX1_list = `!L N r (x:A#A). marked_list L N r x /\ ~final_list L r
  ==> MEM (l'z L N r x) r /\
    (!i. 1 <= i /\ i <= SUC (l'm L r x) ==>
       ~(l'z L N r x = (f_list L POWER i) x))`;;



