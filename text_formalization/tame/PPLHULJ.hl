let PPLHULJ_concl = `!L N r (x:A#A) d i f w. good_list L /\ marked_list L N r x /\ ~final_list L (rtrans L N r x i) /\
    f = find_face L x /\
    w = next_el f x ==>
    MEM (ytrans L N r x i) f /\ MEM (ztrans L N r x i) f /\
    indexf w (ytrans L N r x i) f < indexf w (ztrans L N r x i) f`;;




let PPLHULJ3= prove( (mk_imp(HQYMRTX3_list,(mk_imp(HQYMRTX1_list,(mk_imp(AQIUNPP3_concl,`!L N r(x:A#A) d i.  good_list L /\ marked_list L N r x /\ ~final_list L (rtrans L N r x i)/\
    f = find_face L x /\
    w = next_el f x ==>
    indexf w (ytrans L N r x i) f < indexf w (ztrans L N r x i) f`)))))),
REPEAT RESA_TAC
THEN ASM_REWRITE_TAC[Tame_defs2.rtrans;Tame_defs2.transform_list;COM_POWER;o_DEF]
THEN THAYTHEL_ASM_TAC 5[`L`;`N`;`r`;`x`;`i`][LET_THM]
THEN DICH_ASM_TAC 1[Tame_defs2.marked_list;transform_list_power_rep]
