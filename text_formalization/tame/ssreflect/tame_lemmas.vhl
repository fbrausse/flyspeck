  move => x y [/in_face] x_in [/in_face] y_in /(hyp_iso_inj iso).
  by rewrite dartH => ->.
apply SUM_EQ; move => [a b] /in_face d_in.
by rewrite o_THM /= ext_dart Fan.pr2 Fan.pr3 /= azim_dart_eq_azim_fan.
