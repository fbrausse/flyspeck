(* Build of the computational parts of the Flyspeck Project *)

flyspeck_needs "strictbuild.hl";;

let exists_pgm s = 
  let com = Printf.sprintf 
    "command -v %s >/dev/null 2>&1 || { echo >&2 'Not_found'; exit 1; }" s in
  let u = process_to_string com in
    (u != "Not_found");;

(* Graph Generator -- java version *)

let graph_dir = flyspeck_dir ^ "/../graph_generator";;

flyspeck_needs (graph_dir ^ "/graph_control.hl");;

let graph_gen_properties = Filename.temp_file "graph_gen_props_" ".properties";;

let graph_gen_outfile = Filename.temp_file "graph_gen_out_" ".out";;
  


