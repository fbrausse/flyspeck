  DISCH_THEN SUBST1_TAC;
  DISCH_THEN SUBST1_TAC;
  ABBREV_TAC `u = a2 * c - b `;
  HASH_UNDISCH_TAC 3659;
  REWRITE_TAC[REAL_ARITH `--x / a < &0 <=> &0 < x / a`];
  SIMP_TAC [REAL_ARITH`&0 < x ==> &0 < &2 * x`;Trigonometry2.REAL_LT_DIV_0];
  BY(REAL_ARITH_TAC )
