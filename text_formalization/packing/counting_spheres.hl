  REPEAT DISCH_TAC;
  SUBGOAL_THEN `(u2:real^3)$3 = &0` (fun t-> (REPEAT (POP_ASSUM MP_TAC)) THEN MP_TAC t);
    BY(BY(ASM_MESON_TAC[]));
  SPEC_TAC (`u2:real^3`,`u2:real^3`);
  PAD2D3D_TAC;
  GEN_TAC;
  REPEAT WEAK_STRIP_TAC;
