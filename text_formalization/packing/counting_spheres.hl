    REWRITE_TAC[DIMINDEX_2;DIMINDEX_3];
    BY(BY(ARITH_TAC));
  SUBGOAL_THEN `polyhedron P' /\ bounded P' /\ (!p2. norm (p2:real^2) < r ==> p2 IN P')` MP_TAC;
    EXPAND_TAC "P'";
